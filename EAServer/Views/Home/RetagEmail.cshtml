<body>

    <div class="testing">
        <div class="container">
            <h1>Retagging Emails</h1>
            <hr />
            <p>Which tag should this email be?</p>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="high" checked>
                <label class="form-check-label" for="flexRadioDefault1">
                    High Priority
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="medium">
                <label class="form-check-label" for="flexRadioDefault2">
                    Medium Priority
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="low">
                <label class="form-check-label" for="flexRadioDefault2">
                    Low Priority
                </label>
            </div>
            <br />
            <button type="button" class="btn btn-outline-primary" id="save" onclick="Retag()">Save</button>
        </div>
    </div>

</body>
